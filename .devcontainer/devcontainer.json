{
    "name": "jk/hn_summarizer",
    "build": {
        "dockerfile": "../src/Dockerfile"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "editorconfig.editorconfig",
                "github.copilot",
                "github.copilot-labs",
                "ms-python.isort",
                "ms-python.pylint",
                "ms-python.python",
                "ms-python.vscode-pylance"
            ],
            "settings": {
                "python.pythonPath": "/usr/local/bin/python"
            }
        }
    },
    "runArgs": [
        "--env-file=.env",
        "--network=scraper-net"
    ],
    "forwardPorts": []
}
